    "build": {
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["generate", "build"],
      "outputs": ["dist/**"]
    },
    "generate": {},
    "lint": {},
    "migrate": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
